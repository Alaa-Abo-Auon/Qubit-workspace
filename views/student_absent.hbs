<h1>{{title}}</h1>
<hr>
<div>
    {{#if students}}
        <h4>Absent Table</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Student Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Current Group</th>
                    <th scope="col">Level1</th>
                    <th scope="col">Level2</th>
                    <th scope="col">Level3</th>
                    <th scope="col">Level4</th>
                    <th scope="col">Level5</th>
                    <th scope="col">Level6</th>
                    <th scope="col">Absent Count</th>
                </tr>
            </thead>
            <tbody>
                {{#each students as |student|}}
                <tr>
                    <td>
                        <a href='/admin/level/group/student/{{student._id}}'>{{student.name}}</a>
                    </td>
                    <td>
                        {{student.phone_number}}
                    </td>
                    <td>
                        <a href="/admin/level/group/{{student.group._id}}">{{student.group.name}}</a>
                    </td>
                    <td>
                        {{#if student.level1}}
                            {{student.level1}}
                        {{/if}}
                    </td>
                    <td>
                        {{#if student.level2}}
                            {{student.level2}}
                        {{/if}}
                    </td>
                    <td>
                        {{#if student.level3}}
                            {{student.level3}}
                        {{/if}}
                    </td>
                    <td>
                        {{#if student.level4}}
                            {{student.level4}}
                        {{/if}}
                    </td>
                    <td>
                        {{#if student.level5}}
                            {{student.level5}}
                        {{/if}}
                    </td>
                    <td>
                        {{#if student.level6}}
                            {{student.level6}}
                        {{/if}}
                    </td>
                    <td>
                        {{ student.abs }}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <h6 class="text-danger">There is no absent students</h6>
    {{/if}}
    
</div>